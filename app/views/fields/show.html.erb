<%- model_class = Field -%>
<div class="page-header">
  <h1><%=t '.title', :default => Field %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:code_name) %></dt>
      <dd><pre class="prettyprint"><%= @field.code_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:label) %></dt>
      <dd><pre class="prettyprint"><%= @field.label %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:field_type) %></dt>
      <dd><pre class="prettyprint"><%= @field.field_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:required) %></dt>
      <dd><pre class="prettyprint"><%= @field.required %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:min) %></dt>
      <dd><pre class="prettyprint"><%= @field.min %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:max) %></dt>
      <dd><pre class="prettyprint"><%= @field.max %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ui_hint) %></dt>
      <dd><pre class="prettyprint"><%= @field.ui_hint %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fields_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_field_path(@field), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              field_path(@field),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

