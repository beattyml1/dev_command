<%- model_class = Field -%>
<div class="page-header">
  <h1><%=t '.title', :default => Field %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:code_name) %></th>
      <th><%= model_class.human_attribute_name(:label) %></th>
      <th><%= model_class.human_attribute_name(:field_type) %></th>
      <th><%= model_class.human_attribute_name(:required) %></th>
      <th><%= model_class.human_attribute_name(:min) %></th>
      <th><%= model_class.human_attribute_name(:max) %></th>
      <th><%= model_class.human_attribute_name(:ui_hint) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.id %></td>
        <td><%= field.code_name %></td>
        <td><%= field.label %></td>
        <td><%= field.field_type %></td>
        <td><%= field.required %></td>
        <td><%= field.min %></td>
        <td><%= field.max %></td>
        <td><%= field.ui_hint %></td>
        <td><%=l field.created_at, format: :long %></td>
        <td>
          <%= link_to field_path(field), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to field_path(field), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_field_path,
            :class => 'btn btn-primary' %>
