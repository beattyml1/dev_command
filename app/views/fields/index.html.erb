<h1>Listing fields</h1>

<table>
  <thead>
    <tr>
      <th>Code name</th>
      <th>Label</th>
      <th>Entity</th>
      <th>Field type</th>
      <th>Required</th>
      <th>Min</th>
      <th>Max</th>
      <th>Ui hint</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.code_name %></td>
        <td><%= field.label %></td>
        <td><%= field.entity %></td>
        <td><%= field.field_type %></td>
        <td><%= field.required %></td>
        <td><%= field.min %></td>
        <td><%= field.max %></td>
        <td><%= field.ui_hint %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

