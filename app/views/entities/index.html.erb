<h1>Listing entities</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Code name</th>
      <th>Label</th>
      <th>Layout hint</th>
      <th>Field</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.project %></td>
        <td><%= entity.code_name %></td>
        <td><%= entity.label %></td>
        <td><%= entity.layout_hint %></td>
        <td><%= entity.field %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

