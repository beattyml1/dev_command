<%= simple_form_for(@entity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :project %>
    <%= f.input :code_name %>
    <%= f.input :label %>
    <%= f.input :layout_hint %>
    <%= f.association :field %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
